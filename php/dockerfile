FROM php:8.2-apache

# Instala extensões necessárias
RUN apt-get update && apt-get install -y \
    libzip-dev unzip git libpng-dev libonig-dev curl \
    && docker-php-ext-install pdo_mysql zip mbstring exif pcntl gd \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Habilita rewrite e aponta o DocumentRoot para /public
RUN a2enmod rewrite \
    && sed -ri -e 's!/var/www/html!/var/www/html/public!g' /etc/apache2/sites-available/000-default.conf

WORKDIR /var/www/html

# ⬇ Instala composer
RUN curl -sS https://getcomposer.org/installer | php -- \
    && mv composer.phar /usr/local/bin/composer

# Copia o Laravel para dentro do container
COPY src/example-app/ .

# Instala dependências
RUN composer install --no-interaction --optimize-autoloader

# Copia scripts de inicialização
COPY entrypoint.sh /usr/local/bin/entrypoint.sh
COPY wait-for-db.sh /usr/local/bin/wait-for-db.sh

RUN chmod +x /usr/local/bin/entrypoint.sh /usr/local/bin/wait-for-db.sh

EXPOSE 80

ENTRYPOINT ["/usr/local/bin/entrypoint.sh"]

